<div>
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <div class="flex-column justify-space-around">
      <h5 class="display-flex justify-space-between align-center p-2">
        {{blog.user.name}}
        <span></span>
        {{format_date blog.date_created}}
      </h5>
    </div>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.content}}
    </p>
  </div>
  <hr />

  {{#each blog.comments as |comment| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    {{format_date comment.date_created}}<br>
    {{comment.user.name}}
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
  {{/each}}

  <hr />
  <div class="col-md-6">
    <form class="form add-comment-form">
      <div class="form-group">
        <label for="comment">Leave a Comment</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>