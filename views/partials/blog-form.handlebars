<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="blog-form-header">{{blogform.title}}</h3>

    <form class="form blog-form" data-blog-id="{{blogform.id}}" data-blog-action="{{blogform.action}}">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{blogform.name}}"/>
      </div>
      <div class="form-group">
        <label for="blog-content">Blog Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content" value="{{blogform.content}}" ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">{{blogform.buttonText}}</button>
      </div>
    </form>
  </div>