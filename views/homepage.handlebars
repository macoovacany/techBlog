<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    {{format_date blog.date_created}}<br>
    {{blog.user.name}}
  </div>
  <div class="col-md-7">
    <p>
      {{{intro_text blog.content}}}
    </p>
  </div>
</div>
{{/each}}
